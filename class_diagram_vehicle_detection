// Class Diagram for Vehicle Detection App
digraph {
	graph [rankdir=LR]
	App [label="App
- user_id
- password
+ login()
+ register()
+ showHome()"]
	Camera [label="Camera
- camera_id
- location
+ connect()
+ streamVideo()"]
	AIModel [label="AIModel
+ detectVehicles(video)
+ classifyVehicle()
+ detectNumberPlate()"]
	Backend [label="Backend
+ receiveVideo()
+ processDetection()
+ sendNotification()"]
	ViolationLog [label="ViolationLog
- date_time
- vehicle_type
- number_plate
- location
+ logViolation()"]
	RestrictedZone [label="RestrictedZone
- location
- is_restricted
+ isRestricted(location)"]
	LoginInfo [label="LoginInfo
- user_id
- password"]
	Notification [label="Notification
+ send()"]
	VideoFeed [label="VideoFeed
- annotated_video
+ showRealTimeDetection()"]
	App -> Camera [label=manages]
	App -> ViolationLog [label="views history"]
	App -> RestrictedZone [label="adds/updates"]
	App -> LoginInfo [label="authenticates via"]
	App -> VideoFeed [label=views]
	Camera -> Backend [label="sends video to"]
	Backend -> AIModel [label="uses for detection"]
	AIModel -> VideoFeed [label="returns output to"]
	Backend -> RestrictedZone [label="checks location in"]
	Backend -> ViolationLog [label="stores to"]
	Backend -> Notification [label=triggers]
}
